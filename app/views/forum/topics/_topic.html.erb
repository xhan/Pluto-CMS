<tr id="<%= topic.dom_id%>">
  <td class="">
    <%= link_to h(topic.title), forum_forum_topic_path(@forum, topic) %>

  </td>
  
  <td class="posts">
    <%= topic.posts.count %>
  </td>

  <td class="last_post">
    <%= post_info topic.last_post %>
  </td>
  

  <td id="<%= topic.dom_id%>_controls" class="controls">
    <%= thickbox_inline('Edit', "#{topic.dom_id}_edit", {:title => "Editing topic #{topic.title}",
                                                         :id => "#{topic.dom_id}_edit_link"}, {:height => 100}) %> : 
    <%= link_to_remote 'Destroy', {:url => forum_forum_topic_url(@forum, topic), :confirm => 'Are you sure?', 
                                  :method => :delete}, {:class=> "destroy", :id => "#{topic.dom_id}_destroy_link"} %>
                                                       
    <div id="<%= topic.dom_id%>_edit" class="hidden">
      <%#= render :partial => 'forum_topics/form', :locals => {:topic => topic}%>
    </div>
  </td>

</tr>        


